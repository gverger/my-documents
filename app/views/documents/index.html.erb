<div class="mb-10">
  <ul>
    <% documents.each do |document| %>
      <li class="container mx-auto">
        <div class="bg-white rounded-lg p-6 border border-gray mt-8 flex">
          <div class="w-4/5 flex">
            <% if document.file.present? %>
              <%= link_to image_tag(document.thumbnail("100x100"),class: "h-16 shadow-xl mr-6" ),rails_blob_path(document.file, disposition: "attachment") %>
            <% end %>
            <div class="text-left w-auto inline-block">
              <div class="flex items-center">
                <div>
                  <h2 class="text-lg mr-6">
                    <%= document.name %>
                  </h2>
                  <%= render partial: 'tags_list', locals: { tags: document.tags } %>
                </div>
                <div class="text-gray-500">
                  <%= document.description %>
                </div>
              </div>
            </div>
          </div>
          <div class="w-1/5 flex items-center flex-row-reverse">
            <%= link_to edit_document_path(document), class: "hover:text-orange-700 text-orange-500 font-bold py-2 px-4 rounded items-center" do %>
              <%= mi.edit %>
              <span>Edit</span>
            <% end %>
          </div>
        </div>
      </li>
    <% end %>
  </ul>

</div>

<div class="container mx-auto">
  <%= link_to "New", new_document_path, class: "bg-green-500 hover:bg-green-400 text-white font-bold py-2 px-4 rounded shadow-lg" %>
</div>
