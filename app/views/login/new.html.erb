<div class="container mx-auto">
    <% if logged_in? %>
      <div class="flex bg-green-100 border-l-4 border-green-500 text-green-700 p-4" role="alert">
        <p>Vous êtes connecté(e).</p>
      </div>
    <% else %>
      <div class="flex bg-red-100 border-l-4 border-red-500 text-red-700 p-4" role="alert">
        Vous n'êtes pas connecté(e).
      </div>
      <div class="flex p-4">
        <%= link_to 'Se connecter', auth_at_provider_path(provider: :google), class:'pl-8' %>
      </div>
    <% end %>
  </div>
</div>
